{
    "name": "Service Console Extension (geekboy)",
    "description": "Lighting",
    "version": "0.1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "./background.js"
    },
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://acquia.lightning.force.com/lightning/r/Case/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://*.lightning.force.com/*"],
            "js": [
                "./js/queue-refresh/queue-refresh.js",
                "./init.js"
            ],
            "css": [
                "./themes/default/case-view/case-view.css",
                "./themes/default/case-block-elements/case-table.css",
                "./themes/default/case-block-elements/case-ul.css", 
                "./themes/default/case-view-right/right-boxes.css",
                "./themes/default/queue-refresh/queue-refresh.css"
            ]
        }
    ]
}